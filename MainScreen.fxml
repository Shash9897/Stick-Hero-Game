<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="532.0" prefWidth="285.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.MainScreenController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <StackPane prefHeight="150.0" prefWidth="200.0">
        <children>
            <ImageView fitHeight="519.0" fitWidth="274.0">
                <image>
                    <Image url="@stickhero.jpg" />
                </image>
            </ImageView>
            <Button mnemonicParsing="false" onAction="#handleExitButtonClick" prefHeight="36.0" prefWidth="105.0" text="Exit" translateY="90.0" />
            <Button fx:id="newGameButton" onAction="#handleNewGameButtonClick" onMouseDragEntered="#handleNewGameButtonClick" prefHeight="35.0" prefWidth="105.0" text="New Game" textAlignment="CENTER" translateY="-30.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="STICK HERO" translateX="-20.0" translateY="-150.0">
                <font>
                    <Font name="Berlin Sans FB Demi Bold" size="39.0" />
                </font>
            </Text>
            <ImageView fitHeight="36.0" fitWidth="43.0" translateX="110.0" translateY="-150.0">
                <image>
                    <Image url="@hero.png" />
                </image>
            </ImageView>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="LET'S PLAY!" translateY="-100.0" wrappingWidth="111.720703125">
            <font>
               <Font name="Berlin Sans FB Demi Bold" size="20.0" />
            </font>
         </Text>
         <Button fx:id="continueButton" onAction="#handleContinueButtonClick" onMouseDragEntered="#handleContinueButtonClick" prefHeight="35.0" prefWidth="105.0" text="Continue Game" textAlignment="CENTER" translateY="30.0" />
        </children>
    </StackPane>
</VBox>
