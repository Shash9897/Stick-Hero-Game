<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.PhongMaterial?>
<?import javafx.scene.shape.Box?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="532.0" prefWidth="285.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ReviveController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <StackPane prefHeight="150.0" prefWidth="200.0">
        <children>
            <ImageView fitHeight="519.0" fitWidth="274.0">
                <image>
                    <Image url="@stickhero.jpg" />
                </image>
            </ImageView>

            <Box depth="100" height="195.0" translateX="-75.0" translateY="162.0" width="25.0">
                <material>
                    <PhongMaterial diffuseColor="BLACK" />
                </material>
            </Box>

            <Box depth="100" height="195.0" translateX="75.0" translateY="162.0" width="50.0">
                <material>
                    <PhongMaterial diffuseColor="BLACK" />
                </material>
            </Box>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="REVIVE" translateY="-150.0">
                <font>
                    <Font name="Berlin Sans FB Demi Bold" size="39.0" />
                </font>
            </Text>
            <Button fx:id="yesButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="55.0" text="Yes" translateY="-90.0" onAction="#handleYesButton"/>
            <Button fx:id="noButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="55.0" text="No" translateY="-40.0" onAction="#handleNoButton"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="10 Cherries will be deducted" translateY="10.0" />
        </children>
    </StackPane>
</VBox>
